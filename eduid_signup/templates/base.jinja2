<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>{{ _("Sign up") }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link href="{{'eduid_signup:static/css/bootstrap-2.3.1.min.css'|static_url}}" rel="stylesheet" media="screen">
    <link href="{{'eduid_signup:static/css/screen.css'|static_url}}" rel="stylesheet" media="screen">
  </head>
  <body>
   <div class="container">
     <div class="masthead">
       <ul class="nav nav-pills pull-right">
         <li class="{% block nav_class_home %}{% endblock %}"><a href="{{ request.route_path('home') }}">{{ _("Home") }}</a></li>
         <li class="{% block nav_class_help %}{% endblock %}"><a href="{{ request.route_path('help') }}">{{ _("Help") }}</a></li>
       </ul>
       <a href="{{ request.route_path('home') }}"><img src="{{'eduid_signup:static/img/logo_eduID_g_color.svg'|static_url}}" alt="Logotype"/></a>
       <a href="http://www.sunet.se/" target="_blank">
           <img src="{{'eduiddashboard:static/img/SUNET_badge.png'|static_url}}" alt="SUNET logotype"/>
       </a>
     </div>
     {% block contents %}

     {% endblock %}
   </div>
   <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
   <script>window.jQuery || document.write('<script src=\'{{"eduid_signup:static/js/libs/jquery-1.9.1.min.js"|static_url}}\'><\/script>')</script>
   <script src="{{'eduid_signup:static/js/libs/bootstrap-2.3.1.min.js'|static_url}}"></script>

   <div class="clearfix"></div>

   <div id="footer">
    <div class="container">
        <p>
            &copy; SUNET 2013-2014
            <span class="pull-right">
            {% for lang, label in request.registry.settings.get('available_languages', {}).items() %}
                <span class="langselector">
                    {% if request.locale == lang %}
                        <span>{{ label }}</span>
                    {% else %}
                        <a href="{{ request.route_path('set_language')}}?lang={{lang}}">{{ label }}</a>
                    {% endif %}
                </span>
            {% endfor %}
            </span>
        </p>
    </div>
   </div>

    {% block extrajs %}
    {% endblock %}
  </body>
</html>
