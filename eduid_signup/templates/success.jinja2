{% extends "templates/base.jinja2" %}

{% block contents %}
    <div class="jumbotron">
      <h1>{{ _("Welcome to eduID!") }}</h1>
      <p class="lead">{{ _("Account created successfully") }}</p>
    </div>

    <div class="row">
        <div class="span12 lead">
          <h4>{{ _("Confirm registration") }}</h4>
          <p>
          {% trans email=email %}
          An email with instructions on how to proceed has been sent to <strong>{{ email }}</strong>.
          {% endtrans %}
          </p>
        </div>
    </div>
{% endblock %}
