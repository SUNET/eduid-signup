{% extends "templates/base.jinja2" %}

{% block contents %}

{% if email_already_verified is defined %}
  <div class="jumbotron eduid-account-created">
    <h1>{{ _("Welcome to eduID!") }}</h1>
    <p class="lead">{{ _("Email address has already been verified") }}</p>
    <p class="lead">{{ _("Maybe you want to reset your password again?") }}</p>
  </div>
  <div class="row">
      <div class="col-md-12">
        <p class="text-center">
          <a class="btn btn-success btn-lg profile-link" href="{{ reset_password_link }}">
              {{ _("Reset password") }}</a>
        </p>
      </div>
  </div>
{% elif code_does_not_exists is defined %}
  <div class="jumbotron eduid-account-created">
    <h1>{{ _("Welcome to eduID!") }}</h1>
    <p class="lead">{{ _("There was a problem with the provided code") }}</p class="lead">
    <p class="lead">{{ _("Go to the code verification page to manually enter the code or try to register again") }}</p>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <p class="text-center">
          <a class="btn btn-success btn-lg profile-link"
             href="{{ signup_link }}">
              {{ _("Register again") }}</a>
      </p>
    </div>
    <div class="col-sm-6">
      <p class="text-center">
          <a class="btn btn-success btn-lg profile-link"
             href="{{ code_form }}">
              {{ _("Code verification page") }}</a>
      </p>
    </div>
  </div>
{% else %}
  <div class="jumbotron eduid-account-created">
    <h1>{{ _("Welcome to eduID!") }}</h1>
    {% if from_email is defined %}
      <p class="lead">
        {% trans email=email %}
          Registration of {{ email }} completed
        {% endtrans %}
      </p>
    {% endif %}
  </div>

  {% include "inc.registration_completed.jinja2" %}

{% endif %}
{% endblock %}

{% block extrajs %}
    <script type="text/javascript" src="{{'eduid_signup:static/js/signup-verification_code_form2.js'|static_url}}"></script>
{% endblock %}
