{% extends "templates/base.jinja2" %}

{% block nav_class_home %}active{% endblock %}

{% block contents %}
<div class="jumbotron">
  <h1>{{ _("Welcome to eduID!") }}</h1>

  <p class="lead">{{ _("Create an account for use with Swedish Universities.") }}</p>

  <div class="row text-center">
    <div id="email-register" class="col-md-12">
      <div id="email-register-lg">
        <form class="form-inline" role="form" method="POST">
         <div class="form-group{% if email_error is defined %} has-error{% endif %}">
          <div class="input-group">
            <input type="email" name="email" class="form-control" placeholder="name@example.edu" {% if email is defined %}value="{{ email or '' }}"{% endif %} required />
            <span class="input-group-btn">
              <button class="btn btn-success" type="submit">{{ _("Sign up with your email address") }}</button>
            </span>
          </div>
          {% if email_error is defined %}
            <p class="help-block">{{ email_error }}</p>
          {% endif %}

         </div>
        </form>
      </div>
      <div id="email-register-sm">
        <form role="form" class="form-horizontal" method="POST">
         <div class="form-group{% if email_error is defined %} has-error{% endif %}">
          <input type="email" name="email" id="input-email-register" class="form-control" placeholder="name@example.edu" {% if email is defined %}value="{{ email or '' }}"{% endif %} required />
          {% if email_error is defined %}
            <p class="help-block">{{ email_error }}</p>
          {% endif %}
          <button class="btn btn-success" type="submit">{{ _("Sign up with your email address") }}</button>
         </div>
        </form>
      </div>
    </div>
  </div>
  <div class="row text-center">
    <div id="social-register" class="col-lg-6">
      {% if request.registry.settings.get('facebook_auth_enabled', False) %}
        <a class="btn-social btn-facebook" href="{{ request.route_path('facebook_login') }}">
          <span class="btn-icon"></span>
          <span class="btn-text">{{ _("Sign up with Facebook") }}</span>
        </a>
      {% endif %}
      {% if request.registry.settings.get('google_auth_enabled', False) %}
        <a class="btn-social btn-google" href="{{ request.route_path('google_login') }}">
          <span class="btn-icon"></span>
          <span class="btn-text">{{ _("Sign up with Google") }}</span>
        </a>
      {% endif %}
      {% if request.registry.settings.get('liveconnect_auth_enabled', False) %}
        <a class="btn-social btn-liveconnect" href="{{ request.route_path('liveconnect_login') }}">
          <span class="btn-icon"></span>
          <span class="btn-text">{{ _("Sign up with Live Connect") }}</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<div class="modal fade aup">
  <div class="modal-dialog">
    <div class="modal-content">
      {% include "acceptable_use_policy-{0}.jinja2".format(request.locale) %}
      <div id="eduid-modal-buttons" class="modal-footer">
        <div class="col-xs-12 col-sm-6 eduid-modal-button">
          <a href="#reject" class="btn btn-danger">{{  _("Reject") }}</a>
        </div>
        <div class="col-xs-12 col-sm-6 eduid-modal-button">
          <a href="#accept" class="btn btn-success">{{ _("Accept") }}</a>
        </div>
      </div>
    </div>
  </div>
</div>


{% endblock %}


{% block extrajs %}
   <script type="text/javascript" src="{{'eduid_signup:static/js/signup-home.js'|static_url}}"></script>
{% endblock %}
