{% extends "templates/base.jinja2" %}

{% block nav_class_home %}active{% endblock %}

{% block contents %}

  <div class="jumbotron">
    {% if error is defined %}
      <h1>{{ _("Oops!") }}</h1>
      <p class="lead">{{ _("Please try again") }}</p>
    {% else %}
      <h1>{{ _("Only one more step!") }}</h1>
      <p class="lead">{{ _("eduID must verify that you are a human and not a machine.") }}</p>
    {% endif %}

  </div>

    <div class="row">
        <div class="span4 offset4">
            <form action="" method="post">
              <script type="text/javascript"
                 src="//www.google.com/recaptcha/api/challenge?k={{ recaptcha_public_key }}">
              </script>
              <noscript>
                 <iframe src="//www.google.com/recaptcha/api/noscript?k={{ recaptcha_public_key }}"
                     height="300" width="500" frameborder="0"></iframe><br>
                 <textarea name="recaptcha_challenge_field" rows="3" cols="40">
                 </textarea>
                 <input type="hidden" name="recaptcha_response_field"
                     value="manual_challenge">
              </noscript>
            </form>
        </div>
    </div>

{% endblock %}
