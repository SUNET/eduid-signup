{% extends "templates/base.jinja2" %}

{% block nav_class_home %}active{% endblock %}

{% block contents %}

    <div class="jumbotron">
    {% if error is defined %}
        <h1>{{ _("Oops!") }}</h1>
        <p class="lead">{{ _("Please try again") }}</p>
    {% else %}
        <h1>{{ _("Only one more step!") }}</h1>
        <p class="lead">{{ _("eduID must verify that you are a human and not a machine.") }}</p>
    {% endif %}
    </div>
    <div class="row">
        <div id="eduid-captcha" class="col-xs-12 col-lg-6 mx-auto">
          <div id="eduid-captcha-inner">
                <form action="?" method="POST">
                    <div class="g-recaptcha" data-sitekey="{{ recaptcha_public_key }}"></div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-primary">{{ _("Submit") }}</button>
                        </div>
                        <div class="col-sm-6">
                            <a href="/" class="btn btn-light">{{ _("Cancel") }}</a>
                        </div>
                    </div>
                </form>
          </div>
        </div>
    </div>
{% endblock %}

{% block extrajs %}
    <script src="https://www.google.com/recaptcha/api.js?hl={{ lang }}" async defer></script>
{% endblock %}
